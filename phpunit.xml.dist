<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./vendor/autoload.php" colors="true">
    <testsuites>
        <testsuite name="DesignPatternForPHP">
            <directory suffix="Test.php">src/DesignPattern/*/Test</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory>./vendor</directory>
            <directory>./bin</directory>
        </blacklist>
    </filter>
</phpunit>
